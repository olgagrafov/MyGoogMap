<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/background_light">

    <ImageView
        android:id="@+id/imgPlaceSer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"

         />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_weight="1"
        >


        <!--TextView
            android:id="@+id/typePlaceSer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textMultiLine" /-->
        <TextView
            android:id="@+id/namePlaceSer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryDark"
            android:inputType="textMultiLine"
            />

        <TextView
            android:id="@+id/txtStreetSer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textMultiLine"
             />

        <TextView
            android:id="@+id/txtDistanceSer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textMultiLine"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_margin="5dp"
        >

        <ImageButton
            android:id="@+id/btnHref"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:backgroundTint="@android:color/background_light"
            app:srcCompat="@drawable/googleg_standard_color_18" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_margin="5dp"
        >
    <ImageButton
        android:id="@+id/btnAddSer"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:backgroundTint="@android:color/background_light"
        app:srcCompat="@android:drawable/btn_star_big_on"
        />
        <ImageButton
            android:id="@+id/btnShareSer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/background_light"
            app:srcCompat="?attr/actionModeShareDrawable" />


    </LinearLayout>


</LinearLayout>